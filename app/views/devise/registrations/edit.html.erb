<div class="form-page d-flex justify-content-center">
  <div class="form form-large-navbar w-80p">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <h4 class="mb-4">Edit
        <%= current_user.first_name.possessive %> profile
      </h4>
      <%= f.error_notification %>
      <%= f.input :email, required: true, autofocus: true %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for:
          <%= resource.unconfirmed_email %>
        </p>
      <% end %>
      <%= f.input :password, :include_blank => true, placeholder: "Leave it blank if you don't want to change it",
                          required: false,
                          input_html: { autocomplete: "new-password" }, input_wrapper_html: { class: 'text-white' } %>
      <%= f.input :password_confirmation, :include_blank => true,
                          required: false,
                          input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password, :include_blank => true, placeholder: "Current password required to confirm your changes",
                          required: true,
                          input_html: { autocomplete: "current-password" } %>
      <%= f.input :photo, as: :file %>
      <div class='d-flex justify-content-start mb-3'>
        <%= f.button :submit, "Update profile", class: "button orange d-flex justify-content-center" %>
        <%= link_to 'Back to profile', profile_path(current_user), class: "button back-to-profile ml-2 d-flex justify-content-center align-items-center" %>
      </div>
      <%= link_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
    <% end %>
  </div>
</div>
