  <div class="form-page d-flex justify-content-center">
    <div class="form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div>
          <h4 class="mb-4 mt-4">Log in</h4>
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="d-flex justify-content-between form-actions">
          <%= f.button :submit, "Log in", class: "signup-button orange d-flex justify-content-center"%>
        </div>
        <div style="color:black">
          <%= render "devise/shared/links", class: "login-button orange forgot-password mb-5" %>
        </div>
      <% end %>
    </div>
  </div>
