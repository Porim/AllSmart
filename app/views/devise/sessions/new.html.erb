  <div class="login-container d-flex justify-content-center mt-5">
      <div class="container d-flex justify-content-space-around mt-5">
        <div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <h4 class="mb-5 mt-5">Log in</h4>
            <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="d-flex justify-content-between form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-primary rounded mb-3 mt-2"%>
          </div>
          <div style="color:black;">
            <%= render "devise/shared/links", class: "login-button orange forgot-password" %>
              <% end %>
          </div>
        </div>
      </div>
  </div>


