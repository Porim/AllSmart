<div class="form-container d-flex align-items-center justify-content-center flex-column">
    <div class="text-white form-box container">
    <%= simple_form_for @kid do |f| %>
      <h4 class="mb-4">Add child to your profile</h4>
      <%= f.input :first_name, input_html: { class: "name"}%>
      <%= f.input :last_name, input_html: { class: "name"}%>
      <%= f.input :age %>
      <%= f.hidden_field :avatar_key %>
      <%= f.input :photo, as: :file %>
      <div class="d-flex justify-content-start">
        <%= f.submit class: ' btn-form button orange d-flex justify-content-center', value:'Add child' %>
        <%= link_to 'Back to profile', profile_path(current_user), class: "btn-form white button d-flex justify-content-center align-items-center ml-2" %>
      </div>
    <% end %>
  </div>
</div>
