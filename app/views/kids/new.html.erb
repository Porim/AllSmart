<div class="form-page d-flex justify-content-center mt-5">
  <div class="form">
    <%= simple_form_for @kid do |f| %>
      <h4 class="mb-4">Add child to your profile</h4>
      <%= f.input :first_name, input_html: { class: "name"}%>
      <%= f.input :last_name, input_html: { class: "name"}%>
      <%= f.input :age %>
      <%= f.input :photo, as: :file %>
      <%= f.submit class: 'button orange', value:'Add child' %>
    <% end %>
  </div>
</div>
