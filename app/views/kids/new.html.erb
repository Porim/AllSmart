<div class="login-container d-flex justify-content-center mt-5">
  <div class="container d-flex justify-content-center mt-5">
      <div class="container d-flex justify-content-center mt-5">
        <div>
          <h4 class="mt-2 mb-5">Add child to your profile</h4>
          <%= simple_form_for @kid do |f| %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :age %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-primary rounded mb-3 mt-2', value:'Add child' %>
             <% end %>
        </div>

      </div>
    </div>
  </div>
