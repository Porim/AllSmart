<div class="new-container">
  <div class="new-inner">
    <div class="top-inner ml-4">
      <div id="kid-avatar">
        <%= cl_image_tag("vt5sy3uiwvcsywyahm2z", crop: :fill, id: "avatar-kid") %>
      </div>
      <div class="d-flex justify-content-end" id="trophy-id">
        <%= cl_image_tag("t52nozvl8yhxm6eas8ee", crop: :fill, id: "trophy") %>
      </div>
      <div class="">
        <div class="d-flex justify-content-between">
          <h2 id="level">LV<%= @kid.level %></h2>
          <h2 id="current-xp"><%= @kid.total_score %>XP</h2>
        </div>
        <div id="xp-bar">
        </div>
      </div>
    </div>
    <div class="container">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner py-5">
          <% @allowed_games.each_slice(3).each_with_index do |array, index| %>
            <div class="carousel-item <%= "active" if index == 0 %>">
              <div class="row h-100">
                <% array.each do |allowed_game| %>
                  <div class="col-4 d-flex justify-content-center">
                    <div class="game-card-kid p-2">
                      <%= link_to game_path(allowed_game.game_id, kid_id: @kid) do %>
                        <%= cl_image_tag allowed_game.game.cloud_imag_url, class: 'game-card-kid-image' %>
                        <div class="container mt-2">
                          <h4><%= allowed_game.game.subject %></h4>
                          <h4><%= allowed_game.game.topic %></h4>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>
