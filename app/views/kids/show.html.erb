<div class="container">
  <h3 class="d-flex justify-content-center mb-5 mt-5">
    <%= @kid.first_name.possessive %> Profile</h3>

  <ul class="mt-3">
      <p class="mb-1"> Name: <%= @kid.first_name %> </p>
      <p> Age: <%= @kid.age %> </p>

    <div class="">
      <li>Allowed games:
      <ol>
      <% @kid.allowed_games.each do |allowed_game| %>
      <li>Title: <%= allowed_game.game.title %>. Subject: <%= allowed_game.game.subject %> <%= link_to  "Delete",  allowed_game_path(allowed_game), class: "btn btn-primary mb-1 mt-1", method: :delete, data: {confirm: "Are you sure you want delete this game?"} %></li>
      <% end %>
      </ol>
    </li>
    <li>Total_score:
      <%= @kid.total_score %>
    </li>
  </ul>
    <%= link_to 'Back to profile', profile_path(@current_user), class: 'btn btn-primary'%>
</div>
    </div>
