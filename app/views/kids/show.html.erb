<div class="games-kid-show-page">
  <div class="container all-games">
    <div class="d-flex justify-content-start align-items-center">
      <h2 class='h2-game-title'>
        <%= @kid.first_name.capitalize.possessive %> allowed games
      </h2>
      <%= cl_image_tag 'uiprme0fpeh7am66dntp', class: 'subject-icon-no-hover ml-4'%>
    </div>
    <% if @allowed_games.count > 0 %>
<div class="row">
  <% @allowed_games.each do |allowed_game| %>
  <div class="col-12 col-md-6 col-lg-4 d-flex flex-column justify-content-center align-items-center hover-dimensions"
    id="allowed-game-<%=allowed_game.id%>">
    <div class="show-card">
    <div class="search-game-card">
      <div>
        <%= cl_image_tag allowed_game.game.cloud_imag_url, class: 'search-game-card-image' %>
      </div>
      <div>
        <h5 class='mt-3 pl-1'>
          <%= allowed_game.game.title %>
        </h5>
        <p class="paragraph game-desc">Age category:
          <span class="age-cat">
            <%= allowed_game.game.age_category %></span>
        </p>
        <p class="paragraph game-desc">Topic:
          <span class="age-cat">
            <%= allowed_game.game.topic %></span>
          <%= link_to allowed_game_path(allowed_game, kid_id: @kid), data: {confirm: "Are you sure you want delete this game?"}, method: :delete, anchor: "allowed-game-#{allowed_game.id}", remote: true do %>
          <i class="fa fa-trash greenish" aria-hidden="true"></i>
          <% end %>
        </p>
      </div>
    </div>
    </div>
    <% if false %>
    <%= link_to  "Delete",  allowed_game_path(allowed_game, kid_id: @kid), class: "greenish call-to-action mx-auto mt-3", data: {confirm: "Are you sure you want delete this game?"}, method: :delete, anchor: "allowed-game-#{allowed_game.id}", remote: true %>
    <% end %>
  </div>
  <% end %>
</div>
<% else %>
<p class="paragraph mt-5 custom-header"> You haven't added
  any
  games to
  <%= @kid.first_name.possessive.capitalize %> profile ðŸ˜¿. Lets fix
  this! ðŸ˜º </p>
<div class="d-flex align-items-center justify-content-center my-5">
