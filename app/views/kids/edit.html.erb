<% if browser.platform.android? && browser.device.mobile? %>
<div class="form-container d-flex align-items-center justify-content-center flex-column">
    <div class="text-white form-box container form-padding-for-android">
      <%= simple_form_for [@kid] do |f| %>
      <h4 class="mb-4">Edit
        <%= @kid.first_name.capitalize.possessive %>
        profile 
      </h4>
      <%= f.input :first_name, input_html: { class: "name"} %>
      <%= f.input :last_name, input_html: { class: "name"} %>
      <%= f.input :age %>
      <%= f.hidden_field :avatar_key %>
      <div>
        <p>Choose avatar or upload your own!</p>
        <div class="d-flex justify-content-start align-items-center mb-2">
          <div class=" upload-container d-flex flex-column align-items-center">
            <%= cl_image_tag "okd26heqffak0vzi5oi3", class: "avatar-large mb-2 avatar-change" %>
          </div>
          <div class="hidden-upload">
            <%= f.input :photo, as: :file, label: false %>
          </div>
          <label class='button greenish' for="kid_photo">Select file</label>
        </div>
        <p>Tap to pick</p>
      </div>
      <div class="d-flex justify-content-start">
        <%= f.submit class: " btn-form button orange d-flex justify-content-center" %>
        <%= link_to 'Back to profile', profile_path(current_user), class: " btn-form button white d-flex justify-content-center align-items-center ml-2" %>
      </div>
    <% end %>
  </div>
</div>
<% else %>
<div class="form-container d-flex align-items-center justify-content-center flex-column">
    <div class="text-white form-box container">
