<div class="form-page d-flex justify-content-center">
  <div class="form">
      <%= simple_form_for [@kid] do |f| %>
      <h4 class="mb-4">Edit
        <%= @kid.first_name.capitalize.possessive %>
        profile 
      </h4>
      <%= f.input :first_name, input_html: { class: "name"} %>
      <%= f.input :last_name, input_html: { class: "name"} %>
      <%= f.input :age %>
      <%= f.input :photo, as: :file %>
      <div class="d-flex justify-content-start">
        <%= f.submit class: "button orange" %>
        <%= link_to 'Back to profile', profile_path(current_user), class: "button back-to-profile d-flex justify-content-center align-items-center ml-2" %>
      </div>
    <% end %>
  </div>
</div>
